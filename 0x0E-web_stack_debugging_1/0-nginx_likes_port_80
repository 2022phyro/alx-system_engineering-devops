#!/usr/bin/env bash100-redirect_http_to_https
# This debugs this container and allow it listen at 80
#sed -i -e 's/listen 8080/listen 80/'  /etc/nginx/sites-enabled/default
#sed -i 's/listen \[\:\:\]\:8080/listen \[\:\:\]\:80/' /etc/nginx/sites-enabled/default
#sed -i 's/ ipv6only=one//' /etc/nginx/sites-available/default
sed -i "s/listen 8080 default_server;/listen 80 default_server;/" /etc/nginx/sites-enabled/default
sed -i "s/listen \[::\]:8080 default_server ipv6only=on;/listen \[::\]:80 default_server;/" /etc/nginx/sites-enabled/default
sed -i "s/ ipv6only=on//" /etc/nginx/sites-available/default
service nginx restart
