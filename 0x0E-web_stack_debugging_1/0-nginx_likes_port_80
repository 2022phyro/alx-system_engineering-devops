#!/usr/bin/env bash
# This debugs this container and allow it listen at 80
sed -i -e 's/listen 8080/listen 80/'  -e 's/listen \[\:\:\]\:8080/listen \[\:\:\]\:80/' /etc/nginx/sites-enabled/default
sed -i -e 's/listen 80 default_server;/listen 80;\n\tlisten 172.17.0.1:80;/' /etc/nginx/sites-enabled/default
sed -i 's/server_name localhost;/server_name _;/' /etc/nginx/sites-enabled/default
kill -HUP "$(pgrep -f "nginx: master process")"
sudo service nginx start
